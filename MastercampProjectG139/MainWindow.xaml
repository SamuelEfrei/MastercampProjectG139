<Window x:Class="MastercampProjectG139.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MastercampProjectG139"
        mc:Ignorable="d"
        Title="OrdOnline - Vue Médecin" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Style="{x:Null}">
                <MenuItem Header="_Fichier" Style="{x:Null}">
                    <MenuItem Header="_Quitter" Click="MenuItem_Click" Style="{x:Null}"/>
                </MenuItem>
                <MenuItem Header="_Edition" Style="{x:Null}">
                    <MenuItem Header="_Ajouter un médicament" Style="{x:Null}" />
                </MenuItem>
            </Menu>
        </DockPanel>
        <StackPanel x:Name="panelTop">
            <Grid x:Name="leftGrid_panelTop" Height="90">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <TextBlock Text="Ajouter une ordonnance" Margin="10 0 0 0" VerticalAlignment="Center" FontWeight="Bold" FontSize="28" Grid.Column="0" Grid.Row="0" />
                <Button x:Name="btn_addMedicament" Content="Ajouter un autre médicament" HorizontalAlignment="Left" Margin="10 0 0 0" Grid.Column="0" Grid.Row="1" Width="auto" />
                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical"  HorizontalAlignment="Right" Margin="0 0 10 0" VerticalAlignment="Center">
                    <TextBlock x:Name="txtBlock_nomPrenom" TextAlignment="Right" FontSize="15" FontStyle="Italic" Text="NOM Prénom" />
                    <TextBlock Text="Médecin" FontSize="15" TextAlignment="Right" FontWeight="DemiBold" FontStyle="Italic" />
                </StackPanel>
                
            </Grid>
        </StackPanel>
        <StackPanel x:Name="panelMiddle">
            
        </StackPanel>
        <StackPanel x:Name="panelBottom">

        </StackPanel>
    </StackPanel>
    
</Window>
